<?xml version="1.0" encoding="utf-8"?>
   <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
   
    
    <EditText
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    android:inputType="text"
    android:hint="@string/poiname"
    android:id="@+id/poiname"
    />
    
    <EditText
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    android:inputType="text"
    android:hint="@string/poitype"
    android:id="@+id/poitype"
    />
    
    <EditText
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    android:inputType="text"
    android:hint="@string/poidescription"
    android:id="@+id/poidescription"
    />
    
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
 android:id="@+id/addPOIBtn" android:text="@string/addPOI" />
    
    </LinearLayout>


